    "map-obj": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.146",
    "@types/map-obj": "^3.1.0",
    "chokidar-cli": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "quicktype": "^15.0.209",
    "ts-json-schema-generator": "^0.58.1",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  }
