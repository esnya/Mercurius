{
  "compilerOptions": {
    // Output
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    // Features
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    // Strict
    "strict": true
  },
  "exclude": [
    "grafana-*",
    "kibana-*",
    "logstash-*"
  ]
}